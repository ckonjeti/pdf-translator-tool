# Sanskrit Translator Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
# Required: Get from https://platform.openai.com/api-keys
# Must have GPT-4 Vision (gpt-4o) access for OCR functionality

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sanskrit-translator
# Required: MongoDB connection string
# Get from MongoDB Atlas: https://atlas.mongodb.com
# Free tier is sufficient for most use cases

# Session Security
SESSION_SECRET=your_very_secure_random_session_secret_here
# Required: Strong random string for session encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# Application Configuration
NODE_ENV=development
# Set to 'production' for deployment

# Optional: Performance Tuning
NODE_OPTIONS=--max-old-space-size=2048
NPM_CONFIG_PRODUCTION=false

# Server Configuration
PORT=5000
# Local development port (Render will override this)

# CORS Configuration (for production)
# CORS_ORIGIN=https://translatorassistant.com
# Uncomment and set for production deployment